                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_keyboard_clear"
                            android:layout_width="@dimen/r0_keyboard_size"
                            android:layout_height="@dimen/r0_keyboard_size"
                            android:layout_margin="@dimen/r0_keyboard_padding"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:stateListAnimator="@animator/lift_on_touch"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/keyboard"
                            app:cardCornerRadius="@dimen/r0_keyboard_radius">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:theme="@style/AppTheme.KeyboardText"
                                android:text="C" />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_keyboard_zero"
                            android:layout_width="@dimen/r0_keyboard_size"
                            android:layout_height="@dimen/r0_keyboard_size"
                            android:layout_margin="@dimen/r0_keyboard_padding"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:stateListAnimator="@animator/lift_on_touch"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/keyboard"
                            app:cardCornerRadius="@dimen/r0_keyboard_radius">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:theme="@style/AppTheme.KeyboardText"
                                android:text="0" />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_keyboard_back"
                            android:layout_width="@dimen/r0_keyboard_size"
                            android:layout_height="@dimen/r0_keyboard_size"
                            android:layout_margin="@dimen/r0_keyboard_padding"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:stateListAnimator="@animator/lift_on_touch"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/keyboard"
                            app:cardCornerRadius="@dimen/r0_keyboard_radius">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_action_back" />

                        </android.support.v7.widget.CardView>

                    </GridLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_r0_hint_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:background="@drawable/sp_corner"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>