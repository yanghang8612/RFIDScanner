<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_r0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_r0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/toolbar_title_margin_start"
                android:layout_gravity="start"
                android:background="@drawable/bg_toolbar_title"
                android:text="@string/r0_title"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/black" />

            <include layout="@layout/connection_status_header" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/r0_card_margin"
            android:layout_weight="2"
            app:cardBackgroundColor="@color/snow"
            app:cardCornerRadius="@dimen/r0_card_radius"
            app:cardElevation="@dimen/r0_card_elevation">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/r0_card_horizontal_padding"
                    android:layout_marginTop="@dimen/r0_card_title_margin"
                    android:layout_marginBottom="@dimen/r0_card_title_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/r0_card_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/r0_card_title_text_size" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/btn_modify"
                            android:layout_width="@dimen/r0_card_title_button_size"
                            android:layout_height="@dimen/r0_card_title_button_size"
                            android:src="@drawable/ic_action_modify"
                            app:cb_color="@color/gray"
                            app:cb_pressedRingWidth="8dp" />

                        <at.markushi.ui.CircleButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="@dimen/r0_card_title_button_size"
                            android:layout_height="@dimen/r0_card_title_button_size"
                            android:src="@drawable/ic_action_cancel"
                            android:visibility="gone"
                            app:cb_color="@color/orange_red"
                            app:cb_pressedRingWidth="8dp" />

                        <at.markushi.ui.CircleButton
                            android:id="@+id/btn_save"
                            android:layout_width="@dimen/r0_card_title_button_size"
                            android:layout_height="@dimen/r0_card_title_button_size"
                            android:src="@drawable/ic_action_save"
                            android:visibility="gone"
                            app:cb_color="@color/sea_green"
                            app:cb_pressedRingWidth="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/r0_card_horizontal_padding"
                    android:layout_marginEnd="@dimen/r0_card_horizontal_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bucket_spec_label" />

                        <TextView
                            android:id="@+id/tv_product_bucket_spec"
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_bucket_spec"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:textSize="@dimen/r0_card_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bucket_type_label" />

                        <TextView
                            android:id="@+id/tv_bucket_type"
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_bucket_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:textSize="@dimen/r0_card_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/water_brand_label" />

                        <TextView
                            android:id="@+id/tv_product_water_brand"
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_water_brand"
