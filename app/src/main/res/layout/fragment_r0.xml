                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_bucket_producer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:textSize="@dimen/r0_card_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bucket_owner_label" />

                        <TextView
                            android:id="@+id/tv_bucket_owner"
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_bucket_owner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:textSize="@dimen/r0_card_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bucket_user_label" />

                        <TextView
                            android:id="@+id/tv_bucket_user"
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_bucket_user"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:textSize="@dimen/r0_card_text_size" />

                    </LinearLayout>

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center_vertical">-->

                    <!--<Button-->
                    <!--android:id="@+id/modifyConfigButton"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
