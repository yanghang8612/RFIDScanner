<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_r0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_r0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/toolbar_title_margin_start"
                android:layout_gravity="start"
                android:background="@drawable/bg_toolbar_title"
                android:text="@string/r0_title"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/black" />

            <include layout="@layout/connection_status_header" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll_r0_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/r0_content_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/r0_content_margin"
                android:gravity="center">

                <com.casc.rfidscanner.layout.InputCodeLayout
                    android:id="@+id/icl_body_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icl_header="AHY"
                    app:icl_number="5"
                    app:icl_width="@dimen/r0_body_code_size"
                    app:icl_height="@dimen/r0_body_code_size"
                    app:icl_divideWidth="10dp"
                    app:icl_showMode="normal"
                    app:icl_textColor="@color/black"
                    app:icl_textSize="@dimen/r0_body_code_text_size"
                    app:icl_focusBackground="@drawable/bg_edit_focus"
                    app:icl_unFocusBackground="@drawable/bg_edit_un_focus" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="276dp"
                android:layout_height="80dp"
                android:theme="@style/ButtonPrimary"
                android:text="@string/register_button_text"
                android:textSize="@dimen/r0_button_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <com.dlazaro66.qrcodereaderview.QRCodeReaderView
                    android:id="@+id/qrv_body_code_reader"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:theme="@style/AppTheme.BigText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="规格配置信息：" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_product_name"
                            android:theme="@style/AppTheme.BigText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_r0_list"
                        android:padding="8dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_registered_count_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/bg_r0_hint">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_tag_status"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_connection_abnormal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="桶标签"
                            android:textSize="46sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_r0_hint"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="46sp" />

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>