                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:textSize="@dimen/r0_card_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/water_spec_label" />

                        <TextView
                            android:id="@+id/tv_product_water_spec"
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_water_spec"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:textSize="@dimen/r0_card_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bucket_producer_label" />

                        <TextView
                            android:id="@+id/tv_bucket_producer"
