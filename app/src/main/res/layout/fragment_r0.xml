                    <!--android:backgroundTint="@color/colorPrimary"-->
                    <!--android:theme="@style/ButtonPrimary"-->
                    <!--android:text="修改配置"-->
                    <!--android:textSize="@dimen/r0_card_text_size" />-->

                    <!--</LinearLayout>-->

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginTop="@dimen/r0_content_margin"
            android:layout_marginBottom="@dimen/r0_content_margin"
            android:layout_marginEnd="@dimen/r0_content_margin">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <TextView
                        android:theme="@style/AppTheme.CommonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/epc_label" />

                    <TextView
                        android:id="@+id/tv_epc"
                        android:theme="@style/AppTheme.CommonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_epc" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:theme="@style/AppTheme.CommonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rssi_label" />

                    <TextView
                        android:id="@+id/tv_rssi"
                        android:theme="@style/AppTheme.CommonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:theme="@style/AppTheme.CommonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/registered_count_label" />

                    <TextView
                        android:id="@+id/tv_registered_count"
                        android:theme="@style/AppTheme.CommonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_default_value"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:theme="@style/AppTheme.CommonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/body_code_label" />
                    
                    <com.casc.rfidscanner.layout.InputCodeLayout
                        android:id="@+id/icl_body_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:icl_header="HY"
                        app:icl_number="6"
                        app:icl_width="36dp"
                        app:icl_height="36dp"
                        app:icl_divideWidth="10dp"
                        app:icl_showMode="normal"
                        app:icl_textColor="@color/black"
                        app:icl_textSize="16sp"
                        app:icl_focusBackground="@drawable/bg_edit_focus"
                        app:icl_unFocusBackground="@drawable/bg_edit_un_focus" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <com.suke.widget.SwitchButton
                        android:id="@+id/sbtn_auto_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <!--<com.dd.processbutton.FlatButton-->
                        <!--android:id="@+id/btn_register"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="36dp"-->
                        <!--android:theme="@style/ButtonPrimary"-->
                        <!--android:text="@string/register_button_text"-->
                        <!--android:textSize="@dimen/r0_content_text_size" />-->

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/ButtonPrimary"
                        android:text="@string/register_button_text"
                        android:textSize="@dimen/r0_content_text_size"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_registered_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:background="@drawable/sp_corner" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/r0_keyboard_margin_bottom"
                        android:columnCount="3"
                        android:rowCount="4">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_keyboard_one"
                            android:layout_width="@dimen/r0_keyboard_size"
                            android:layout_height="@dimen/r0_keyboard_size"
                            android:layout_margin="@dimen/r0_keyboard_padding"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:stateListAnimator="@animator/lift_on_touch"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/keyboard"
                            app:cardCornerRadius="@dimen/r0_keyboard_radius">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:theme="@style/AppTheme.KeyboardText"
                                android:text="1" />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_keyboard_two"
                            android:layout_width="@dimen/r0_keyboard_size"
                            android:layout_height="@dimen/r0_keyboard_size"
                            android:layout_margin="@dimen/r0_keyboard_padding"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:stateListAnimator="@animator/lift_on_touch"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/keyboard"
                            app:cardCornerRadius="@dimen/r0_keyboard_radius">

                            <TextView
