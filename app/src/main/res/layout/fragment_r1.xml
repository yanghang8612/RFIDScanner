<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_r1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/toolbar_title_margin_start"
                android:background="@drawable/bg_toolbar_title"
                android:text="@string/r1_title"
                android:textColor="@color/black"
                android:textSize="@dimen/toolbar_title_size" />

            <include layout="@layout/connection_status_header" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                app:rowCount="4"
                app:columnCount="2">

                <TextView
                    android:theme="@style/AppTheme.BigText"
                    android:text="桶标签"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1" />

                <LinearLayout
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center">

                    <ImageView
                        android:id="@+id/iv_scrap_tag_status"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_connection_abnormal" />

                </LinearLayout>

                <TextView
                    android:theme="@style/AppTheme.BigText"
                    android:text="桶身码"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1" />

                <TextView
                    android:id="@+id/tv_scrap_body_code"
                    android:theme="@style/AppTheme.BigText"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1" />

                <TextView
                    android:theme="@style/AppTheme.BigText"
                    android:text="产品名称"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1" />

                <TextView
                    android:id="@+id/tv_scrap_product_name"
                    android:theme="@style/AppTheme.BigText"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1" />

                <TextView
                    android:theme="@style/AppTheme.BigText"
                    android:text="报废原因"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1" />

                <com.weiwangcn.betterspinner.library.BetterSpinner
                    android:id="@+id/spn_scrap_reason"
                    android:theme="@style/AppTheme.BigText"
                    android:minWidth="200dp"
                    android:gravity="center"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1" />

            </android.support.v7.widget.GridLayout>

            <Button
                android:id="@+id/btn_confirm_scrap"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="24dp"
                android:theme="@style/ButtonPrimary"
                android:text="确认报废"
                android:textSize="@dimen/r1_button_text_size"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@color/snow"
            app:contentPadding="16dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:theme="@style/AppTheme.HeaderText"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_header">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="报废时间" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="桶身码" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="产品名称" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_scrap_products"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>