<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end">

    <ImageView
        android:layout_width="@dimen/header_icon_width"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_icon_margin"
        android:layout_marginBottom="@dimen/header_icon_margin"
        android:src="@drawable/ic_wifi_1"
        android:scaleType="centerInside"/>

    <ImageView
        android:layout_width="@dimen/header_icon_width"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_icon_margin"
        android:layout_marginBottom="@dimen/header_icon_margin"
        android:src="@drawable/ic_battery_20"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.CommonText"
        android:text="@string/time_default_value" />

</LinearLayout>