<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_deliver_bill_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_delivery_bill_margin"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/snow">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_delivery_bill_margin"
            android:layout_marginEnd="@dimen/item_delivery_bill_margin"
            android:padding="@dimen/item_delivery_bill_padding">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:theme="@style/AppTheme.CommonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_id_label" />

                <TextView
                    android:id="@+id/tv_delivery_bill_card_id"
                    android:theme="@style/AppTheme.CommonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HY1001" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="end">

                <TextView
                    android:theme="@style/AppTheme.CommonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_bill_id_label" />

                <TextView
                    android:id="@+id/tv_bill_id"
                    android:theme="@style/AppTheme.CommonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HY020171212001" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_delivery_bill_margin"
            android:layout_marginEnd="@dimen/item_delivery_bill_margin"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_header">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/AppTheme.CommonText"
                android:text="桶规格" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:theme="@style/AppTheme.CommonText"
                android:text="产品类型" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:theme="@style/AppTheme.CommonText"
                android:text="已出库数量" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:theme="@style/AppTheme.CommonText"
                android:text="数量" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="96dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_delivery_bill_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_delivery_bill_margin"
            android:layout_marginEnd="@dimen/item_delivery_bill_margin"
            android:paddingTop="@dimen/item_delivery_bill_padding"
            android:paddingBottom="@dimen/item_delivery_bill_padding"
            android:gravity="center">

            <Button
                android:id="@+id/btn_delivery_bill_detail"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/item_delivery_bill_padding"
                android:theme="@style/ButtonBill"
                android:visibility="gone"
                android:text="详细"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <TextView
                    android:theme="@style/AppTheme.CommonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_count_label" />

                <TextView
                    android:id="@+id/tv_delivery_count"
                    android:theme="@style/AppTheme.CommonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_delivery_bill_padding"
                    android:text="@string/number_default_value" />

                <TextView
                    android:theme="@style/AppTheme.CommonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_count_label" />

                <TextView
                    android:id="@+id/tv_total_count"
                    android:theme="@style/AppTheme.CommonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_default_value" />

            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>