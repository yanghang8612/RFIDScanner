<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_deliver_bill_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/snow">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_delivery_bill_margin"
            android:layout_marginEnd="@dimen/item_delivery_bill_margin"
            android:padding="@dimen/item_delivery_bill_padding">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:theme="@style/AppTheme.BillText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/card_id_label" />

                <TextView
                    android:id="@+id/tv_delivery_bill_card_id"
                    android:theme="@style/AppTheme.BillText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_bill_card_normal"
                    android:text="HY1001" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="end">

                <TextView
                    android:theme="@style/AppTheme.BillText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/delivery_bill_id_label" />

                <TextView
                    android:id="@+id/tv_bill_id"
                    android:theme="@style/AppTheme.BillText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="HY020171212001" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_delivery_bill_margin"
            android:layout_marginEnd="@dimen/item_delivery_bill_margin"
            android:padding="@dimen/item_delivery_bill_padding"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end">

                <TextView
                    android:theme="@style/AppTheme.BillText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/delivery_count_label" />

                <TextView
                    android:id="@+id/tv_delivery_count"
                    android:theme="@style/AppTheme.BigNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="@string/number_default_value" />

                <TextView
                    android:theme="@style/AppTheme.BillText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/item_delivery_bill_margin"
                    android:text="@string/total_count_label" />

                <TextView
                    android:id="@+id/tv_total_count"
                    android:theme="@style/AppTheme.BigNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="@string/number_default_value" />

            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>