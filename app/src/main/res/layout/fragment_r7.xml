<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_r7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_r7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tv_r7_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/toolbar_title_margin_start"
                android:layout_gravity="start"
                android:background="@drawable/bg_toolbar_title"
                android:text="@string/r7_title"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/black" />

            <include layout="@layout/connection_status_header" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll_r7_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/r7_margin"
                android:background="@drawable/sp_corner"
                android:gravity="center">

                <TextView
                    android:theme="@style/AppTheme.LargeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/r7_margin"
                    android:layout_marginStart="@dimen/r7_margin"
                    android:layout_gravity="start"
                    android:text="待上线产品" />

                <TextView
                    android:id="@+id/tv_task_product"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/r7_margin"
                    android:layout_marginEnd="@dimen/r7_margin"
                    android:gravity="bottom|end"
                    android:text=""
                    android:textSize="48sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_task_configure"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/r7_margin"
                android:background="@drawable/sp_corner"
                android:backgroundTint="@color/light_gray"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_task_configure_hint"
                    android:theme="@style/AppTheme.LargeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/r7_margin"
                    android:text="配置任务"
                    android:textSize="64sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_online_bucket_count"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/r7_margin"
                android:background="@drawable/sp_corner"
                android:gravity="center">

                <TextView
                    android:theme="@style/AppTheme.LargeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/r7_margin"
                    android:layout_gravity="start"
                    android:text="已上线数量" />

                <com.casc.rfidscanner.view.NumberSwitcher
                    android:id="@+id/ns_online_bucket_count"
                    android:theme="@style/AppTheme.LargeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/r7_margin"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/process_count_margin"
                    android:text="@string/number_default_value" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/r7_margin"
                android:background="@drawable/sp_corner"
                android:gravity="center">

                <TextView
                    android:theme="@style/AppTheme.LargeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/r7_margin"
                    android:layout_gravity="start"
                    android:text="已转储单数" />

                <com.casc.rfidscanner.view.NumberSwitcher
                    android:id="@+id/ns_stored_bill_count"
                    android:theme="@style/AppTheme.LargeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/r7_margin"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/process_count_margin"
                    android:text="@string/number_default_value" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>