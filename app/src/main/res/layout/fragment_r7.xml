<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_r7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_r7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tv_r7_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/toolbar_title_margin_start"
                android:layout_gravity="start"
                android:background="@drawable/bg_toolbar_title"
                android:text="@string/r7_title"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/black" />

            <include layout="@layout/connection_status_header" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/r7_margin"
                android:background="@drawable/sp_corner"
                android:gravity="center">

                <TextView
                    android:theme="@style/AppTheme.LargeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/r7_margin"
                    android:layout_gravity="start"
                    android:text="@string/process_scanned_count_label" />

                <com.casc.rfidscanner.view.NumberSwitcher
                    android:id="@+id/ns_r7_scanned_count"
                    android:theme="@style/AppTheme.LargeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/r7_margin"
                    android:gravity="end"
                    android:text="@string/number_default_value" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/r7_margin"
                android:background="@drawable/sp_corner"
                android:gravity="center">

                <TextView
                    android:theme="@style/AppTheme.LargeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/r7_margin"
                    android:layout_gravity="start"
                    android:text="@string/process_uploaded_count_label" />

                <com.casc.rfidscanner.view.NumberSwitcher
                    android:id="@+id/ns_r7_uploaded_count"
                    android:theme="@style/AppTheme.LargeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/r7_margin"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/process_count_margin"
                    android:text="@string/number_default_value" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/r7_margin"
                android:background="@drawable/sp_corner"
                android:gravity="center">

                <TextView
                    android:theme="@style/AppTheme.LargeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/r7_margin"
                    android:layout_gravity="start"
                    android:text="@string/process_stored_count_label" />

                <com.casc.rfidscanner.view.NumberSwitcher
                    android:id="@+id/ns_r7_stored_count"
                    android:theme="@style/AppTheme.LargeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/r7_margin"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/process_count_margin"
                    android:text="@string/number_default_value" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/r7_margin"
                android:background="@drawable/sp_corner"
                android:gravity="center">

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/ll_task_choose"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_margin="@dimen/r7_margin">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="4dp"
                            android:text="上线任务单" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/spn_task_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/r7_margin"
                            android:gravity="bottom"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/r7_padding"
                        android:gravity="bottom|end">

                        <Button
                            android:id="@+id/btn_task_start"
                            android:theme="@style/ButtonGrey"
                            android:layout_width="200dp"
                            android:layout_height="56dp"
                            android:text="开始任务单"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_task_info"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/r7_margin"
                        android:layout_marginTop="@dimen/r7_margin">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上线任务单号"/>

                        <TextView
                            android:id="@+id/tv_task_id"
                            android:theme="@style/AppTheme.BigText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/r7_margin"
                            android:text="HY181122001"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/r7_margin"
                        android:layout_marginTop="@dimen/r7_margin">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上线产品名称"/>

                        <TextView
                            android:id="@+id/tv_task_product_name"
                            android:theme="@style/AppTheme.BigText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/r7_margin"
                            android:text="养生"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/r7_margin"
                        android:layout_marginTop="@dimen/r3_margin">

                        <TextView
                            android:theme="@style/AppTheme.CommonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上线产品数量"/>

                        <TextView
                            android:id="@+id/tv_task_product_count"
                            android:theme="@style/AppTheme.BigText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/r3_margin"
                            android:text="270(桶)"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/r7_padding"
                        android:gravity="bottom|end">

                        <Button
                            android:id="@+id/btn_task_stop"
                            android:theme="@style/ButtonRed"
                            android:layout_width="200dp"
                            android:layout_height="56dp"
                            android:text="提交任务单"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>