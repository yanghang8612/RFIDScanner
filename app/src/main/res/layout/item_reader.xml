<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_reader_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_reader_normal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_reader_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:theme="@style/AppTheme.CommonText"
            android:text="UL6" />

        <TextView
            android:id="@+id/tv_reader_mac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:theme="@style/AppTheme.CommonText"
            android:text="00-00-00-00-00-00" />

        <TextView
            android:id="@+id/tv_reader_bonded"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="2"
            android:gravity="center"
            android:theme="@style/AppTheme.CommonText"
            android:text="已配对" />

        <TextView
            android:id="@+id/tv_reader_bonding"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="2"
            android:gravity="center"
            android:theme="@style/AppTheme.CommonText"
            android:text="配对中" />

        <LinearLayout
            android:id="@+id/ll_reader_bond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_reader_bond"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:theme="@style/ButtonGrey"
                android:text="配对"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>