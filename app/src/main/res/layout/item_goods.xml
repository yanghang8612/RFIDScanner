<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_goods_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_goods_margin"
    android:layout_marginEnd="@dimen/item_goods_margin"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/tv_goods_name"
            android:theme="@style/AppTheme.GoodsText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|bottom"
            android:text="11L不老泉纯净水" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="-10dp"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_goods_cur_count"
                android:theme="@style/AppTheme.BigNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_total_count"
            android:theme="@style/AppTheme.BigNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="-10dp"
            android:gravity="end"
            android:text="20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider" />

</LinearLayout>